<!DOCTYPE html>
<html lang="en">
<head>
    <title>Customer Support</title>
    <base href="/">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/20c7401107.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="./css/user_contact_shop.css"/>
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    <script type="text/javascript" src="/jquery/employee_customer_support.js"></script>
</head>
<body>
<header><%- include("Employee_Navbar"); %></header>
<div id="contactSupportPage">
    <div id="contactSupportContainer">
        <h2>Customer Support</h2><br>
        <div class="row">
            <div class="col-4">
                <div class="row">
                    <div class="col-4">
                        <button id="talkBtn" type="submit" class="btn btn-dark float-right">Talk to:</button>
                    </div>
                    <div class="col-6">
                        <select name="customer" id="customer" class="form-control">
                            <% if(customers.length >0){%>
                                <option value="<%= userID %>"><%= fullname %></option>
                                <% for(let i=0;i<customers.length;i++){ %>
                                    <option value="<%= customers[i]._id %>">
                                        <%= customers[i].firstname %> <%= customers[i].lastname %>
                                    </option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                </div><br>
                <h5 class="text-center"> Currently speaking to: <strong id="fullname"><%= fullname %></strong></h5>
                <input type="text" class="hidden" id="userID" value="<%= userID %>" readonly>
                <textarea class="form-control" rows="6" id="msg" name="msg" required></textarea><br>
                <div class="text-center"><button type="button" id="sendMsgBtn" class="btn btn-dark">Send</button></div>
            </div>
            <div class="col-8">
                <div id="msgBoard">
                        <p id="messages"></p><br>
                        <% if(msg.length > 0){%>
                            <% for(i=0; i<msg.length; i++) { %>
                                <div>
                                <% if(msg[i].getSender() !== "admin"){%>
                                    <div class="customerDiv">
                                        <p class="customer"><%= msg[i].getSender() %>:</p>
                                        <p class="customer text-left"><span><%= msg[i].getMessage() %></span></p>
                                        <p class="customer text-left font-weight-bold"><%= msg[i].getTimestamp() %></p>
                                    </div><br><br>
                                <%}else{%>
                                    <div class="adminDiv">
                                        <p class="admin"><%= msg[i].getMessage() %></p>
                                        <p class="admin font-weight-bold"><%= msg[i].getTimestamp() %></p>
                                    </div><br><br><br><br><br><br>
                                <%}%>
                                </div>
                            <%}%>
                        <%}%>

                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
<script>

</script>



